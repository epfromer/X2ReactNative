{
  "name": "@x2react/common",
  "version": "0.0.0",
  "description": "Shared components for X2 React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && copyfiles -u 1 src/img/*.png dist",
    "link": "npm run build && cd dist && npm link"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "copyfiles": "^2.3.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "auto"
  }
}