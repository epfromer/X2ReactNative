{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "latest"
  },
  "scripts": {
    "android": "lerna --scope=NativeApp run android --stream --",
    "expo": "lerna --scope=ExpoApp run start --stream --",
    "postinstall": "cd ./packages/ExpoApp && expo-yarn-workspaces postinstall",
    "web": "lerna --scope=web-app run serve",
    "yarn check": "yarn check",
    "yarn global upgrade-interactive": "yarn global upgrade-interactive",
    "yarn outdated": "yarn outdated",
    "yarn upgrade-interactive": "yarn upgrade-interactive",
    "yarn": "yarn"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  }
}