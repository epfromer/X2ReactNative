{
  "name": "x2-react",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "expo": "lerna --scope=@klonzo/expo run start --stream --",
    "common:build": "lerna --scope=@klonzo/common run build --stream --",
    "postinstall": "cd ./packages/expo && expo-yarn-workspaces postinstall",
    "web": "lerna --scope=@klonzo/web run start:dev --stream --",
    "web:test": "lerna --scope=@klonzo/web run test",
    "yarn": "yarn"
  },
  "devDependencies": {
    "lerna": "latest",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "auto"
  }
}